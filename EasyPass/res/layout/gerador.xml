<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget33"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/Titulo_g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:padding="5dp"
        android:text="EasyPass - Gerador"
        android:textColor="#f00"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/senha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="5dp"
        android:shadowColor="#00f"
        android:shadowDx="0"
        android:shadowDy="0"
        android:shadowRadius="8"
        android:text=" "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#00f"
        android:textSize="55sp" />

    <Button
        android:id="@+id/btn_gerar_g"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Gerar Nova Senha"
        android:textColor="#000"
        android:textSize="18sp" />
    
    <Button
        android:id="@+id/btn_usar_senha_gerada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Usar Senha Gerada!"
        android:textColor="#000"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_voltar_telaAnterior"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Voltar"
        android:textColor="#000"
        android:textSize="18sp" />

</TableLayout>